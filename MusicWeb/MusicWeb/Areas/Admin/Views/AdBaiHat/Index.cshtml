    <div class="card-body"><a href="~/Admin/AdBaiHat/Add" class="btn btn-success">Thêm bài hát</a></div>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên bài hát</th>
                        <th>Ngày phát hành</th>
                        <th>Lượt nghe</th>
                        <th>Lượt tải</th>
                        <th>Lượt thích</th>
