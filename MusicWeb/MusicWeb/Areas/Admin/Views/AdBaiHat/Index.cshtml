                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenBaiHat</td>
                            <td>@item.NgayPhatHanh</td>
                            <td>@item.LuotNghe</td>
