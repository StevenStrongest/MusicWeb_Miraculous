
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Quản lý Album </h6>
    </div>
    <div><a href="~/Admin/Video/AddNew" class="btn btn-primary" style="text-decoration:none;margin-left:30px;width:120px;margin-top:10px;"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới </a></div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-bordered" style="text-align:center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên video </th>
                        <th>Video</th>
                        <th>Nghệ sĩ thực hiện  </th>
                        <th>Quốc gia</th>
                        <th>Poster</th>
                        <th>Sửa</th>
                        <th>Xóa</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TieuDe</td>
                            <td><video src="~/VideoDowload/@item.LinkVideoMp4" width="100" height="100" controls></video></td>
                            <td>@item.NgheSi.TenNgheSi</td>
                            <td>@item.KhuVuc.TenKhuVuc</td>
                            <td><img src="~/Assets/images/PosterVideo/@item.Poster" width="50" height="50" /></td>
                            <td><a href="~/Admin/Video/Update?id=@item.IdVideo" style="text-decoration:none;"><i class="fa fa-wrench" aria-hidden="true"></i></a></td>
                            <td><a href="~/Admin/Video/Delete?id=@item.IdVideo" style="text-decoration:none;"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

