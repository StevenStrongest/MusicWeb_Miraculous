
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Quản lý Album </h6>
    </div>
    <div><a href="~/Admin/Album/Addalbum" class="btn btn-primary" style="text-decoration:none;margin-left:30px;width:120px;margin-top:10px;"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới </a></div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-bordered" style="text-align:center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Album </th>
                        <th>Ảnh Album </th>
                        <th>Quốc gia</th>
                        <th>Nghệ sĩ thực hiện  </th>
                        <th>Sửa</th>
                        <th>Xóa</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenAlbum</td>
                            <td><img src="~/Assets/images/ImagesOutSource/ImagesSong/@item.AnhAlbum" width="50" height="50" /></td>
                            <td>@item.KhuVuc.TenKhuVuc</td>
                            <td>@item.NgheSi.TenNgheSi</td>
                            <td><a href="~/Admin/Album/Update?id=@item.IdAlbum" style="text-decoration:none;"><i class="fa fa-wrench" aria-hidden="true"></i></a></td>
                            <td><a href="~/Admin/Album/DeleteAlbum?id=@item.IdAlbum" style="text-decoration:none;"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>