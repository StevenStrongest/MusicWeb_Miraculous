
<div id="myModal1" class="modal  centered-modal" role="dialog">
    <div class="modal-dialog login_dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal">
                <i class="fa_icon form_close"></i>
            </button>
            <div class="modal-body">
                <div class="ms_register_img">
                    <img src="~/Assets/images/register_img.png" alt="" class="img-fluid" />
                </div>
                @using (Html.BeginForm("Login", "NguoiDung", FormMethod.Post, new { @id = "LoginSubmit"}))
                {
                    <div class="ms_register_form">
                        <h2>login / Sign in</h2>
                        <div id="Userdiv" class="form-group">
                            <input name="user" id="user" type="email" placeholder="Enter Your Email" class="form-control">
                            <p style="color: red" id="text-error-user"></p>
                            <span class="form_icon">
                                <i class="fa_icon form-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div id="Passdiv" class="form-group">
                            <input name="password" id="pass" type="password" placeholder="Enter Password" class="form-control">
                            <p style="color: red" id="text-error-pass"></p>
                            <span class="form_icon">
                                <i class="fa_icon form-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div class="remember_checkbox">
                            <label>
                                Keep me signed in
                                <input type="checkbox">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <p style="color: red" id="text-error" ></p>
                        <a tabindex="0" href="javascript:0" onclick="return Login()" class="ms_btn">Đăng nhập</a>
                        <div class="popup_forgot">
                            <a href="#">Forgot Password ?</a>
                        </div>
                        <p>Nếu bạn chưa có tài khoản? <a href="#myModal" data-toggle="modal" class="ms_modal1 hideCurrentModel">Đăng ký tại đây</a></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


