
@{
    ViewBag.Title = "BaiHatTheoTheLoai";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model List<Model.BaiHat>

@if (Model.Count == 0)
{
    <h1 style="font-size: 25px;margin: 100px 0px">Chưa cập nhật bài hát ở thể loại này</h1>
}
else
{
    <div class="ms_top_artist">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ms_heading">
                        <h1>@ViewBag.TheLoai</h1>
                        <span class="veiw_all"><a href="#">view more</a></span>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-lg-2 col-md-6">
                        <div class="ms_rcnt_box marger_bottom30">
                            <div class="ms_rcnt_box_img">
                                <img src="~/Assets/images/ImagesOutSource/ImagesSong/@item.AnhBaiHat" alt="" class="img-fluid">
                                <div class="ms_main_overlay">
                                    <div class="ms_box_overlay"></div>
                                    <div class="ms_more_icon">
                                        <img src="~/Assets/images/svg/more.svg" alt="">
                                    </div>
                                    <ul style="max-width: 125px" class="more_option">
                                        @if (Session["taikhoan"] != null)
                                        {
                                            <li><a onclick="AddBaiHatFavorit(@item.IdBaiHat)" href="javascript:0"><span class="opt_icon"><span class="icon icon_fav"></span></span>Add To Favourites</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="javascript:0" data-toggle="modal" data-target="#myModal1"><span class="opt_icon"><span class="icon icon_fav"></span></span>Add To Favourites</a></li>
                                        }
                                        <li><a onclick="AddQueue(@item.IdBaiHat)" href="javascript:0"><span class="opt_icon"><span class="icon icon_queue"></span></span>Add To Queue</a></li>
                                        <li><a href="/Home/Dowload?id=@item.IdBaiHat"><span class="opt_icon"><span class="icon icon_dwn"></span></span>Download Now</a></li>
                                        <li><a href="#"><span class="opt_icon"><span class="icon icon_playlst"></span></span>Add To Playlist</a></li>
                                        <li>
                                            <div class="fb-share-button" data-href="@item.LinkChiaSe" data-layout="button_count" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a></div>
                                        </li>
                                    </ul>
                                    <div class="ms_play_icon">
                                        <img src="~/Assets/images/svg/play.svg" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="ms_rcnt_box_text">
                                <h3><a href="/BaiHatController/ChiTietBaiHat?id=@item.IdBaiHat">@item.TenBaiHat</a></h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}




