<div class="ms_top_artist">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="ms_heading">
                    <h1>
                        @if (ViewBag.KhuVuc.Count > 1)
                        {
                            <span>Tất Cả nghệ sĩ</span>
                        }
                        else
                        {
                            var x = "";
                            try
                            {
                                @Model[0].KhuVuc.TenKhuVuc
                            }
                            catch
                            {
                                x = "Chưa cập nhật nghệ sĩ ở quốc gia này";
                            }
                            @x;
                        }
                    </h1>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-2 col-md-6">
                    <div class="ms_rcnt_box marger_bottom30">
                        <div class="ms_rcnt_box_img">
                            <img src="~/Assets/images/ImagesOutSource/ImagesSing/@item.AnhNgheSi" alt="" class="img-fluid">
                            <div class="ms_main_overlay">
                                <div class="ms_box_overlay"></div>                                                                                        
                            </div>
                        </div>
                        <div class="ms_rcnt_box_text">
                            <h3><a href="/ThongTinNgheSi/ThongTin?idNgheSi=@item.IdNgheSi">@item.TenNgheSi</a></h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
