
<div class="ms_fea_album_slider">
    <div class="ms_heading">
        <h1>Album Hot</h1>
        <span class="veiw_all"><a href="#">view more</a></span>
    </div>
    <div class="ms_album_slider swiper-container">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide">
                    <div class="ms_rcnt_box">
                        <div class="ms_rcnt_box_img">
                            <img src="~/Assets/images/ImagesOutSource/Album/@item.AnhAlbum" />
                            <div class="ms_main_overlay">
                                <div class="ms_box_overlay"></div>
                                <div class="ms_more_icon">
                                    <img src="~/Assets/images/svg/more.svg" />
                                </div>
                            </div>
                        </div>
                        <div class="ms_rcnt_box_text">
                            <h3><a href="/Album/AlbumDetail?id=@item.IdAlbum">@item.TenAlbum</a></h3>
                            <p>@item.NgheSi.TenNgheSi</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Add Arrows -->
    <div class="swiper-button-next3 slider_nav_next"></div>
    <div class="swiper-button-prev3 slider_nav_prev"></div>
</div>


